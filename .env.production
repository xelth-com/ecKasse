# ------------------------------------
# GLOBAL SETTINGS
# ------------------------------------
# Application environment (development, production)
NODE_ENV=production

# Application mode (production, demo)
# - production: Uses shared database state (default for real cafe use)
# - demo: Uses isolated in-memory sessions for web demos
APP_MODE=production

# ------------------------------------
# BACKEND SETTINGS (packages/backend)
# ------------------------------------
# Port for the backend server
BACKEND_PORT=3030

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# --- IMPORTANT --- Absolute path to the database file on the server
DB_FILENAME=/var/www/eckasse.com/packages/backend/src/db/eckasse_prod.sqlite3

# ------------------------------------
# API KEYS & INTEGRATIONS
# ------------------------------------
# --- ACTION REQUIRED --- Please insert your Gemini API Key below
GEMINI_API_KEY=YOUR_GOOGLE_GEMINI_API_KEY_HERE

# Hiero Consensus Service (Hedera) - Optional
HIERO_OPERATOR_ID=
HIERO_OPERATOR_KEY=
HIERO_TOPIC_ID=